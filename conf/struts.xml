<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
	

<struts>

    <constant name="struts.devMode" value="true" />
    <package name="iso3"  extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack"/>
        


		<!-- Login Form Configuration -->
        <action name="showLogin" class="iso3.pt.action.ShowLoginAction">
			<result>/jsp/login.jsp</result>
        </action>
        
		<action name="doLogin" class="iso3.pt.action.LoginAction" method="login">
			<result  name="success">/jsp/login.jsp</result>
            <result  name="input">/jsp/login.jsp</result>
			<result  name="error">/jsp/error.jsp</result>
			<result  name="listStudentSubjects" type="redirectAction">doStudentAction</result>
			<result  name="listLecturerSubjects" type="redirectAction">doLecturerAction</result>
        </action>
        
        <action name="doLecturerAction" class="iso3.pt.action.LecturerAction" method="listing">
			<result name="success">/jsp/lecturerSubjects.jsp</result>
			<result name="studentslist">/jsp/studentSubjects.jsp</result>
            
        </action>
        
        <action name="doStudentAction" class="iso3.pt.action.StudentAction" method="listing">
			<result  name="success">/jsp/studentSubjects.jsp</result>
			<!--<result  name="input" type="redirectAction>doStudentAction</result>-->
			<result  name="listaasignaturasmatricular">/jsp/StudentSubjectRegistrationForm.jsp</result>
            <result >/jsp/studentSubjects.jsp</result>
        </action>
        
        <action name="doSubjectAction" class="iso3.pt.action.SubjectAction" method="listing">
			<result  name="success">/jsp/studentSubjectMarks.jsp</result>
			<result name="mostrarnotas">/jsp/StudentAllSubjectsMarks.jsp</result>
            
        </action>
        
        <!--<action name="doSubjectMarkingAction class="iso3.pt.action.SubjectMarkingAction" method="SubjectMarkingAction">
			<result  name="success">/jsp/studentSubjects.jsp</result>
            
        
      	</action>-->
        
        
        
        
        
        
        
        
    </package>


    <!-- Add packages here -->

</struts>
